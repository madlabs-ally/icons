{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "bundler",
        "noEmit": true,
        "incremental": false,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "jsx": "preserve",
        "jsxImportSource": "solid-js"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ]
}