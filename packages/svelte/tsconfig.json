{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "bundler",
        "noEmit": true,
        "incremental": false,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        // Svelte Preprocess needs this
        "verbatimModuleSyntax": true,
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "dist",
        "outDir": "dist",
        "rootDir": "src"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.svelte"
    ]
}